{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://taiko.xyz/shadow/deposit.schema.json",
  "title": "Shadow Deposit File",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "chainId", "secret", "notes"],
  "properties": {
    "version": {
      "type": "string",
      "const": "v2"
    },
    "chainId": {
      "type": "string",
      "pattern": "^[0-9]+$"
    },
    "secret": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$"
    },
    "notes": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["recipient", "amount"],
        "properties": {
          "recipient": {
            "type": "string",
            "pattern": "^0x[0-9a-fA-F]{40}$"
          },
          "amount": {
            "type": "string",
            "pattern": "^[1-9][0-9]*$"
          },
          "label": {
            "type": "string",
            "maxLength": 64
          }
        }
      }
    },
    "targetAddress": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{40}$"
    }
  }
}
